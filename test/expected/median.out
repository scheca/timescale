CREATE TABLE floatvals(val float, color text);
INSERT INTO floatvals VALUES
       (1.4, 'a'),
       (2.7790234, 'c');
SELECT * FROM floatvals ORDER BY val;
    val    | color 
-----------+-------
       1.4 | a
 2.7790234 | c
(2 rows)

SELECT median(val) FROM floatvals;
  median   
-----------
 2.0895117
(1 row)

